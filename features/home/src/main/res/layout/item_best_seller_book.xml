<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:background="#100a20">


	<ImageView
		android:id="@+id/iv_book"
		android:layout_width="60dp"
		android:layout_height="100dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/img" />

	<TextView
		android:id="@+id/tv_title"
		style="@style/BookTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/iv_book"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Harry Potter and the Goblet of Fire" />

	<TextView
		android:id="@+id/tv_author"
		style="@style/Author"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="12dp"
		app:layout_constraintStart_toEndOf="@+id/iv_book"
		app:layout_constraintTop_toBottomOf="@+id/tv_title"
		tools:text="J.K. Rowling" />

	<TextView
		android:id="@+id/tv_price"
		style="@style/Price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="12dp"
		app:layout_constraintStart_toEndOf="@+id/iv_book"
		app:layout_constraintTop_toBottomOf="@+id/tv_author"
		tools:text="19.99 $" />

	<TextView
		android:id="@+id/tv_score"
		style="@style/Score"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="136dp"
		android:layout_marginTop="12dp"
		app:layout_constraintStart_toEndOf="@+id/tv_price"
		app:layout_constraintTop_toBottomOf="@+id/tv_author"
		tools:text="4.8" />

	<TextView
		android:id="@+id/tv_amount_of_scorers"
		style="@style/AmountOfScorers"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="13dp"
		app:layout_constraintStart_toEndOf="@+id/tv_score"
		app:layout_constraintTop_toBottomOf="@+id/tv_author"
		tools:text="(4949)" />
</androidx.constraintlayout.widget.ConstraintLayout>